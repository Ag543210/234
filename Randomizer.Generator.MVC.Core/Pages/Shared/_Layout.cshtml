<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Randomizer</title>
    <link rel="stylesheet" href="/lib/foundation/css/foundation.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    
    <link rel="stylesheet" href="~/Randomizer.Generator.MVC.Core.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="top-bar">
            <div class="top-bar-left">
                <ul class="menu">
                    <li><img class="nav-icon" src="~/Randomizer 150.png" /></li>
                    <li class="menu-text">The Randomizer</li>
                    <li><a asp-page="/Index">Home</a></li>
                </ul>
            </div>
        </div>
    </header>
    @RenderBody()

    <footer class="expanded row column text-center">
        &copy; 2022 - The Randomizer
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/foundation/js/foundation.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>